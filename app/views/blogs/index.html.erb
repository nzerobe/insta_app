

<% @blogs.each do |blog| %>
  <div class="feed center-block">
    <div class="name_area">
      <p class="thumb_photo"><%= link_to image_tag(blog.user.image.url, class: "img-responsive"), user_path(blog.user.id)  %></p>
      <p class="thumb_name"><%= link_to blog.user.name, user_path(blog.user.id) %></p>
    </div>
    <p><%= link_to image_tag(blog.image.url, class: "img-responsive"), blog_path(blog.id)  %></p>
    <div class="sentence_area">
      <p class="sentence"><%= link_to blog.content, blog_path(blog.id) %></p>
      <p class="time"><%= blog.created_at %></p>
    </div>
  </div>
<% end %>
